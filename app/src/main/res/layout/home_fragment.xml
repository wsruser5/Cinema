<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainScreen.fragments.home.HomeFragment"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivHeader"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                
                <Button
                    android:id="@+id/btnHeader"
                    android:background="@drawable/bg_button_header"
                    android:text="Смотреть"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_width="128dp"
                    android:layout_height="44dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="64dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#14c4c4c4"
                android:layout_marginTop="8dp">

                <FrameLayout
                    android:id="@+id/btnTrends"
                    android:layout_width="121dp"
                    android:clickable="true"
                    android:background="#00c4c4c4"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTrends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="В тренде"
                        android:layout_gravity="center_vertical"
                        android:textSize="17sp"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_marginLeft="26dp"/>

                    <FrameLayout
                        android:id="@+id/underTrend"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/colorAccent"
                        android:layout_gravity="bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btnNew"
                    android:clickable="true"
                    android:layout_width="121dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:id="@+id/tvNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Новое"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>

                    <FrameLayout
                        android:id="@+id/underNew"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/colorAccent"
                        android:layout_gravity="bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btnForYou"
                    android:clickable="true"
                    android:layout_width="121dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dp">

                    <TextView
                        android:id="@+id/tvForYou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Для Вас"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>

                    <FrameLayout
                        android:id="@+id/underForYou"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/colorAccent"
                        android:layout_gravity="bottom"/>
                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:id="@+id/items_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:elevation="0dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>